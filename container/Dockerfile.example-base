FROM ffreis/base-runner

USER root
WORKDIR /app

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      python3.11 \
      python3.11-venv \
      python3-pip \
      ca-certificates && \
    rm -rf /var/lib/apt/lists/*

RUN python3.11 -m pip install --no-cache-dir --upgrade pip uv

COPY --chown=appuser:appgroup . /app
